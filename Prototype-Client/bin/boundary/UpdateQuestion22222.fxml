            <TableColumn fx:id="a3" prefWidth="122.0" text="Answer 3" />
            <TableColumn fx:id="a4" prefWidth="118.0" text="Answer 4" />
            <TableColumn fx:id="correctAns" prefWidth="94.0" text="Correct answer" />
            <TableColumn fx:id="correctAns1" prefWidth="41.0" text="Edit" />
            <TableColumn fx:id="correctAns11" prefWidth="65.0" text="Delete" />

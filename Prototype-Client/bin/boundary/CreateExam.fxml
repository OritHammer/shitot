<AnchorPane prefHeight="594.0" prefWidth="674.0" styleClass="card" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.TeacherControl">
   <children>
      <Button layoutX="253.0" layoutY="560.0" mnemonicParsing="false" onAction="#createExam" text="Create exam" />

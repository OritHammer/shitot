      <Label layoutX="299.0" layoutY="497.0" text="Remarks for teacher" />
      <TextField fx:id="remarksForStudent" layoutX="31.0" layoutY="518.0" prefHeight="25.0" prefWidth="245.0" />
      <TextField fx:id="remarksForTeacher" layoutX="299.0" layoutY="520.0" prefHeight="25.0" prefWidth="245.0" />
      <Button fx:id="passQuestionL" layoutX="378.0" layoutY="208.0" mnemonicParsing="false" onAction="#removeFromTableView" text="&lt;" />
      <Button fx:id="passQuestionR" layoutX="378.0" layoutY="239.0" mnemonicParsing="false" onAction="#toQuestionInExam" text="&gt;" />
      <Label layoutX="28.0" layoutY="32.0" text="Questions" />
      <Label fx:id="pageLabel" layoutX="304.0" layoutY="24.0" text="Create exam" />
      <Label layoutX="287.0" layoutY="412.0" text="Time for exam" />
      <ComboBox fx:id="typeComboBox" layoutX="33.0" layoutY="432.0" prefWidth="150.0" />
      <Label layoutX="32.0" layoutY="415.0" text="Type of exam" />
      <Button fx:id="backButton" layoutX="357.0" layoutY="560.0" mnemonicParsing="false" onAction="#closeScreen" text="Back" />
      <TableView fx:id="questionTableView" editable="true" layoutX="31.0" layoutY="85.0" prefHeight="317.0" prefWidth="332.0">
         <columns>
            <TableColumn fx:id="qid" prefWidth="76.0" text="Question ID" />
            <TableColumn fx:id="tname" prefWidth="94.0" text="Teacher name" />
            <TableColumn fx:id="qtext" onEditCommit="#changeQuestionContentOnTable" prefWidth="161.0" text="Question text" />
         </columns>
      </TableView>
      <TableView fx:id="questionsInExamTableView" editable="true" layoutX="411.0" layoutY="87.0" prefHeight="317.0" prefWidth="253.0">
         <columns>
            <TableColumn fx:id="questionNameTableView" prefWidth="132.0" text="Question name" />
            <TableColumn fx:id="questionPointsTableView" onEditCommit="#setPoints" onEditStart="#blockBackButton" prefWidth="120.0" text="Points" />
         </columns>
      </TableView>
      <ComboBox fx:id="coursesComboBox" layoutX="205.0" layoutY="53.0" onAction="#loadQuestions" prefHeight="25.0" prefWidth="150.0" promptText="Choose course" />
      <ComboBox fx:id="subjectsComboBox" layoutX="27.0" layoutY="53.0" onAction="#loadCourses" prefWidth="150.0" promptText="Choose subject" />
      <TextField fx:id="timeForExamMinute" editable="false" layoutX="398.0" layoutY="443.0" prefHeight="25.0" prefWidth="59.0" text="00" />
      <TextField fx:id="timeForExamHours" editable="false" layoutX="322.0" layoutY="443.0" prefHeight="25.0" prefWidth="59.0" text="00" />
      <Label layoutX="387.0" layoutY="446.0" text=":" />
      <JFXButton layoutX="286.0" layoutY="429.0" onAction="#incHours" prefHeight="25.0" prefWidth="33.0" text="▲" />
      <JFXButton layoutX="286.0" layoutY="453.0" onAction="#decHours" prefHeight="25.0" prefWidth="33.0" text="▼" />
      <JFXButton layoutX="458.0" layoutY="429.0" onAction="#incMinutes" prefHeight="25.0" prefWidth="33.0" text="▲" />
      <JFXButton layoutX="458.0" layoutY="453.0" onAction="#decMinutes" prefHeight="25.0" prefWidth="33.0" text="▼" />
      <ImageView fitHeight="75.0" fitWidth="72.0" layoutX="581.0" layoutY="6.0">
         <image>
            <Image url="@../TestPicture.png" />
         </image>
      </ImageView>
   </children>
